FROM golang:1.24.5-alpine AS builder

WORKDIR /build

# Copy go mod files first for caching
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY cmd/status/ ./cmd/status/
COPY pkg/proto/ ./pkg/proto/

# Build the binary
RUN CGO_ENABLED=0 go build -ldflags="-s -w" -o /status-panel ./cmd/status

FROM alpine:latest

RUN apk add --no-cache ca-certificates tzdata

COPY --from=builder /status-panel /usr/local/bin/status-panel

ENTRYPOINT ["/usr/local/bin/status-panel"]
